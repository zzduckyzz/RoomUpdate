<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.room.FragmentNumberPeople">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/numberPeopleSearchView" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_decrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_svg_subtract_24" />

                <TextView
                    android:id="@+id/txt_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="@color/highlightRoom"
                    android:textSize="18dp" />

                <ImageButton
                    android:id="@+id/btn_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_svg_plus_24" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/genderSearchView" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rad_male"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_radio_button_gender"
                    android:button="@android:color/transparent"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="@string/stringMalePushRoom"
                    android:textColor="@drawable/custom_radio_text_color" />

                <RadioButton
                    android:id="@+id/rad_female"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_radio_button_gender"
                    android:button="@android:color/transparent"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="@string/stringFemalePushRoom"
                    android:textColor="@drawable/custom_radio_text_color" />
            </RadioGroup>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>