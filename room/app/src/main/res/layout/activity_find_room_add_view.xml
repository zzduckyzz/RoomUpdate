                                android:id="@+id/chBox_parking"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:background="@drawable/custom_checkbox_arcondition"
                                android:button="@android:color/transparent"
                                android:drawableLeft="@drawable/ic_svg_motobike_24"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="@string/stringParkingPushRoom"
                                android:textColor="@drawable/custom_radio_text_color" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <CheckBox
                                android:id="@+id/chBox_washmachine"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:background="@drawable/custom_checkbox_arcondition"
                                android:button="@android:color/transparent"
                                android:drawableLeft="@drawable/ic_svg_washmachine_24"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="@string/StringWashmachinePushRoom"
                                android:textColor="@drawable/custom_radio_text_color" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="7">

                            <CheckBox
                                android:id="@+id/chBox_waterheater"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:background="@drawable/custom_checkbox_arcondition"
                                android:button="@android:color/transparent"
                                android:drawableLeft="@drawable/ic_svg_waterheater_24"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="@string/StringWaterheat"
                                android:textColor="@drawable/custom_radio_text_color" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <CheckBox
                                android:id="@+id/chBox_security"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:background="@drawable/custom_checkbox_arcondition"
                                android:button="@android:color/transparent"
                                android:drawableLeft="@drawable/ic_svg_security_24"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="@string/StringSecurityPushRoom"
                                android:textColor="@drawable/custom_radio_text_color" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="7">

                            <CheckBox
                                android:id="@+id/chBox_arcondition"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:background="@drawable/custom_checkbox_arcondition"
                                android:button="@android:color/transparent"
                                android:drawableLeft="@drawable/ic_svg_aircondition_24"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="@string/stringAirconditionPushRoom"
                                android:textColor="@drawable/custom_radio_text_color" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="20dp"
                    android:background="@color/colorGrayType2" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:background="@color/colorGrayType2" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lLay_menu"
            android:background="@android:color/white">

            <Button
                android:id="@+id/btn_post_find_room_add"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button_check_map_detail"
                android:text="@string/stringPost"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lLay_menu"
            android:layout_width="match_parent"
